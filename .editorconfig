root = true
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset = utf-8


[*.yaml]
indent_size = 4
indent_style = space

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4


# Tab indentation (no size specified)
[Makefile]
indent_style = tab
